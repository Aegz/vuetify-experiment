
// The main nav sidebar (theres only one and its for desktop)
.v-navigation-drawer {
    // We use a generic v-list but we need the padding to be different
    .v-list { 
        &, &--dense {
            .v-list__tile {
                padding: 23px 30px;
                height: auto;

                &:not(.v-list__tile--avatar) {
                    height: auto;
                }
            }
        }
        .v-list__tile {
            font-size: 16px;
            font-weight: 600;

            &--active {
                background: #f7f7f7;
                border-right: 5px solid #006dbe;
            }
        }
    }
    // Custom implementation for sub-header to match designs
    .v-subheader {
        height: auto;
        padding: 44px 30px 4px 30px;
    }
}