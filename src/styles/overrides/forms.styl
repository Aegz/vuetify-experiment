
.v-select, .v-input {
    // Wrap inputs in a border and remove the underline
    & > .v-input__control > .v-input__slot, & > .v-input__control > .v-input__slot {
        border-radius: 10px;
        border: solid 1px #e3e5ef;
        background-color: #ffffff;
        padding: 3px 9px;
    
        &::before, &::after  {
            content: none;
        }
    }
}

// Push the label higher so itas above the border around the form input (default is 18px?)
.v-text-field .v-label--active {
    max-width: 133%;
    -webkit-transform: translateY(-26px) scale(0.75);
    transform: translateY(-26px) scale(0.75);
}