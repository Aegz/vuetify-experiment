.theme--light {
    &.v-table tbody tr {
        border-bottom: none;
    }
}


.v-select, .v-input {
    // Wrap inputs in a border and remove the underline
    & > .v-input__control > .v-input__slot, & > .v-input__control > .v-input__slot {
        border-radius: 10px;
        border: solid 1px #e3e5ef;
        background-color: #ffffff;
        padding: 3px 9px;
    
        &::before, &::after  {
            content: none;
        }
    }


